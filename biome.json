{
  "$schema": "https://biomejs.dev/schemas/2.3.0/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "bunjs"
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "packages/**/*.ts",
      "packages/**/package.json",
      "packages/**/tsconfig.json",
      "index.ts",
      "package.json",
      "tsconfig.json"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "formatWithErrors": false,
    "lineEnding": "lf",
    "lineWidth": 120,
    "attributePosition": "auto",
    "bracketSpacing": true,
    "expand": "auto"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": "error",
      "complexity": "error",
      "correctness": "error",
      "nursery": "error",
      "performance": "error",
      "security": "error",
      "style": "error",
      "suspicious": "error"
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "trailingCommas": "all",
      "semicolons": "always",
      "arrowParentheses": "always",
      "bracketSameLine": false,
      "operatorLinebreak": "after"
    },
    "parser": {
      "unsafeParameterDecoratorsEnabled": false,
      "jsxEverywhere": false
    },
    "jsxRuntime": "transparent"
  },
  "json": {
    "parser": {
      "allowComments": false,
      "allowTrailingCommas": false
    },
    "formatter": {
      "enabled": false,
      "trailingCommas": "none"
    },
    "linter": {
      "enabled": true
    }
  },
  "css": {
    "parser": {
      "cssModules": true
    },
    "formatter": {
      "enabled": true
    },
    "linter": {
      "enabled": true
    },
    "assist": {
      "enabled": true
    }
  },
  "grit": {
    "formatter": {
      "enabled": true
    },
    "linter": {
      "enabled": true
    },
    "assist": {
      "enabled": true
    }
  },
  "html": {
    "parser": {
      "interpolation": false
    },
    "formatter": {
      "enabled": true,
      "whitespaceSensitivity": "strict",
      "indentScriptAndStyle": true,
      "selfCloseVoidElements": "always"
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "recommended": true,
      "source": {
        "recommended": true,
        "organizeImports": "on"
      }
    }
  },
  "overrides": [
    {
      "includes": [
        "index.ts",
        "packages/trace-web/index.ts",
        "packages/trace-sdk/index.ts",
        "packages/trace-api/index.ts",
        "packages/trace-api/src/handlers/auth.ts"
      ],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsole": "off"
          }
        }
      }
    },
    {
      "includes": [
        "packages/trace-api/src/handlers/auth.ts"
      ],
      "linter": {
        "rules": {
          "security": {
            "noSecrets": "off"
          }
        }
      }
    },
    {
      "includes": [
        "packages/trace-api/index.ts"
      ],
      "linter": {
        "rules": {
          "nursery": {
            "useExplicitType": "off"
          }
        }
      }
    },
    {
      "includes": [
        "packages/trace-api/index.ts",
        "packages/trace-api/index.test.ts"
      ],
      "linter": {
        "rules": {
          "nursery": {
            "noUnresolvedImports": "off"
          }
        }
      }
    },
    {
      "includes": [
        "tsconfig.json"
      ],
      "json": {
        "parser": {
          "allowComments": true
        }
      }
    }
  ]
}
