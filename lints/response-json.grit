`new Response($args)` where {
    not {
        or {
            $args <: contains `"Content-Type"`,
            $args <: contains `{ status: 204 }`,
            $args <: contains `{ status: 404 }`,
        },
    },
    register_diagnostic(
        span = $args,
        message = "Prefer `Response.json`, for structured data, over `new Response()`"
    )
}
